#!/usr/bin/env node
const fs = require('fs')
const path = require('path')

let samplePath = '../sample'
console.log('samplePath:', samplePath)

fs.readdir(samplePath, (err, files) => {
  console.log('err:', err)
  console.log('files:', files)
  console.log('fs.Dirent:', fs.dirent)
  files.forEach(file => {
    // console.log(file.isFile())
    let filePath = samplePath + '/'+ file
    // fs.stat(samplePath + '/'+ file, (err, stats) => {
    //   if (!err) {
    //     stats.isFile() && fs.copyFileSync(filePath, file)
    //     stats.isDirectory() && fs.mkdir(file)
    //   }
    // })
    let stats = fs.statSync(samplePath + '/'+ file)
    stats.isFile() && fs.copyFileSync(filePath, file)
    stats.isDirectory() && fs.mkdirSync(file)
  })
})




