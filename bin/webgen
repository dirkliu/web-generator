#!/usr/bin/env node
const fs = require('fs')
const path = require('path')
const cwd = process.cwd()

let samplePath = path.resolve(__dirname, '../sample')
console.log('samplePath:', samplePath)

fs.readdir(samplePath, (err, files) => {
  let target = path.resolve(cwd, 'dist')
  if (fs.existsSync(target)) {
    fs.rmdirSync(target)
  }
  fs.mkdirSync(target)
  files.forEach(file => {
    let filePath = samplePath + '/'+ file
    
    let stats = fs.statSync(filePath)
    stats.isFile() && fs.copyFileSync(filePath, target + '/' + file)
    stats.isDirectory() && fs.mkdirSync(target + '/' + file)
  })
})




